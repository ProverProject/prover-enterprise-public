<?xml version="1.0" encoding="utf-8"?>
<app:android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomControlsLayout"
    android:layout_width="match_parent"
    android:layout_height="128dp"

    android:padding="16dp"
    app:layout_constraintBottom_toBottomOf="parent">

    <TextView
        android:id="@+id/fpsCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/controlsBgColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Spinner
        android:id="@+id/resolutionSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/controlsBgColor"
        app:layout_constraintBottom_toTopOf="@+id/fpsCounter"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/infoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_masked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_info_outline_white_24dp" />

    <!--    <TextView
            android:id="@+id/statsView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:background="@color/controlsBgColor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" /> -->

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/recordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_start_record_icon" />

</app:android.support.constraint.ConstraintLayout>