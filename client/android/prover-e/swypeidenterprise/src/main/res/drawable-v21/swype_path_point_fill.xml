<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:drawable="@drawable/ic_swype_empty">

    <target android:name="centerPoint">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="@integer/swypeBlinkAnimationDuration"
                android:propertyName="pathData"
                android:valueFrom="@string/swype_point_center_norm"
                android:valueTo="@string/swype_point_center_filled"
                android:valueType="pathType" />
        </aapt:attr>
    </target>

</animated-vector>